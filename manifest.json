{
    "manifest_version": 3,
    "name": "YouTube Queue Manager",
    "short_name": "YQM",
    "version": "1.0.0",
    "description": "Manage YouTube Queue Playlist",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "run_at": "document_idle",
            "js": ["content-script.js"],
            "matches": ["*://*.youtube.com/*"]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["*://*.youtube.com/*"],
            "resources": [
                "content-script.js"
            ]
        }
    ],
    "action": {},
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": ["*://*.youtube.com/*"],
    "background": {
        "service_worker": "background.js"
    }
}
